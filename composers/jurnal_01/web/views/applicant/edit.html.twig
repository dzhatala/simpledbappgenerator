{% extends 'ag_base/backend.html.twig' %}
{% block stylesheets %}
{{parent()}}
    <link href="{{ app['asset_path']}}/datepicker/css/jquery.datepick.css" rel="stylesheet">
{% endblock %}


{% block container %}

    <div class="wrapper row-offcanvas row-offcanvas-left">

        {% include 'menu.html.twig' with {'option': 'applicant_edit'} %}

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">                
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Rubah Applicant, ID : {{ id }}
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">

                {% include 'ag_alerts.html.twig' %}

                <div class="row">
                    <div class="col-md-6">

                        {{ form_start(form, {'method': 'POST'}) }}
                            {{ form_errors(form) }}

                            <div class="box box-info">
                                <div class="box-header">
                                    <h3 class="box-title"></h3>
                                </div><!-- /.box-header -->
                                <div class="box-body">

									<div class='form-group'>
									    {{ form_label(form.user_login_id) }}
									    {{ form_widget(form.user_login_id, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.birth_date) }}
									    {{ form_widget(form.birth_date, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.birth_place) }}
									    {{ form_widget(form.birth_place, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.address) }}
									    {{ form_widget(form.address, { attr: { 'class': 'form-control textarea', 'style': 'width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.prodi_1) }}
									    {{ form_widget(form.prodi_1, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.prodi_2) }}
									    {{ form_widget(form.prodi_2, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.high_school) }}
									    {{ form_widget(form.high_school, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.email_2) }}
									    {{ form_widget(form.email_2, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.phone_2) }}
									    {{ form_widget(form.phone_2, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.path_documents) }}
									    {{ form_widget(form.path_documents, { attr: { 'class': 'form-control' }}) }}
									</div>


									{%if form.vars.value.path_documents!="" %}
											<div class='form-group'>
												{%set uploader_userlogin_id=form.vars.value.path_documents|split('__')|first%}
											   <a href="{{app['www_uploaded']}}/{{uploader_userlogin_id}}/applicant/{{form.vars.value.path_documents}}">Unduh </a> 
											</div>
									{%endif%}
									<div class='form-group'>
									    {{ form_widget(form.path_documents_UPLOAD, { attr: { 'class': 'form-control' }}) }}
									</div>

									<div class='form-group'>
									    {{ form_label(form.path_picture) }}
									    {{ form_widget(form.path_picture, { attr: { 'class': 'form-control' }}) }}
									</div>


									{%if form.vars.value.path_picture!="" %}
											<div class='form-group'>
												{%set uploader_userlogin_id=form.vars.value.path_picture|split('__')|first%}
											   <a href="{{app['www_uploaded']}}/{{uploader_userlogin_id}}/applicant/{{form.vars.value.path_picture}}">Unduh </a> 
											</div>
									{%endif%}
									<div class='form-group'>
									    {{ form_widget(form.path_picture_UPLOAD, { attr: { 'class': 'form-control' }}) }}
									</div>

                                                 

                                </div><!-- /.box-body -->

                                {{ form_rest(form) }}

                                <div class="box-footer">
                                    <button type="submit" class="btn btn-primary">Rubah</button>
                                    <button type="reset" class="btn btn-primary">Ulang</button>
                                </div>

                            </div><!-- /.box -->
                        {{ form_end(form) }}


                    </div>
                </div>

            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->

{% endblock %}
{% block javascripts %}
	{{ parent() }}
   <script src="{{ app['asset_path']}}/datepicker/js/jquery.plugin.min.js"></script>
	<script src="{{ app['asset_path']}}/datepicker/js/jquery.datepick.js"></script>
	<script src="{{ app['asset_path']}}/datepicker/js/jquery.datepick-id.js"></script>
	<script>
	$(function() {
      var dpopts= {dateFormat: 'yyyy-mm-dd'   
                  };
				$('#form_birth_date').datepick(dpopts);
   });
	</script>
{% endblock %}

